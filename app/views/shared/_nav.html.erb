<% unless user_signed_in? %>
  <h1><%= link_to t('.header'), root_path %></h1>

  <%= link_to t('.shared.links.signup'), new_registration_path(resource_name) %>
  <%= link_to t('.shared.links.login'), new_user_session_path(resource_name) %>
<% else %>
  <p><%= t('.shared.message.welcome') %> <%= current_user.email %></p>
  <%= button_to t('.shared.links.logout'), destroy_user_session_path, method: :delete %>
<% end %>

