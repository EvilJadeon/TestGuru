<h1 class="display-3"> <%= t('.header') %> </h1>

<p> <%= link_to t('shared.links.new_test'), new_admin_test_path, class: "btn btn-primary btn-lg" %> </p>

<% unless @tests.empty?%>
  <table class="table table-hover">
    <tr class="table-primary">
      <th scope="col" class="sort-by-title pointer text-center">
        <%=t('.title') %>
      </th>
      <th scope="col" class="text-center"><%=t('.level') %></th>
      <th scope="col" class="text-center"><%=t('.count') %></th>
      <th colspan="3" scope="col" class="text-center"><%=t('.actions') %></th>


    </tr>

    <%= render @tests %>

  </table>
<% else %>
  <p><%= t('.shared.message.no_test') %></p>
<% end %>

