<h1><%= t('.header') %></h1>

<p><%= link_to t('.shared.links.new_test'), new_admin_test_path %></p>

<% unless @tests.empty?%>
  <table>
    <tr>
      <th><%= t('.title') %></th>
      <th><%= t('.level') %></th>
      <th><%= t('.count') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>

    <%= render @tests %>
  </table>
<% else %>
  <p><%= t('.shared.message.no_test') %></p>
<% end %>

